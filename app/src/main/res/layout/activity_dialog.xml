<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListOrder.Dialog">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin đơn hàng"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="43dp"
            android:text="Tên bàn:"/>

        <TextView
            android:id="@+id/tv_dialog_name_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#27B52C"
            android:text="bàn số 8"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="Trạng thái:"/>

        <TextView
            android:id="@+id/tv_dialog_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#27B52C"
            android:text="bàn số 8"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="37dp"
            android:text="Ngày đặt:"/>

        <TextView
            android:id="@+id/tv_dialog_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#27B52C"
            android:text="bàn số 8"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:text="Tổng tiền:"/>

        <TextView
            android:id="@+id/tv_dialog_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#27B52C"
            android:text="bàn số 8"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_dialog_item"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_thanhtoan"
            android:text="Thanh toán"/>

    </LinearLayout>

</LinearLayout>